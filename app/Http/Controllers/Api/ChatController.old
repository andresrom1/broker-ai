<?php

namespace App\Http\Controllers\Api;

use App\Http\Controllers\Controller;
use Illuminate\Http\Request;
use App\Services\OpenAIService;
use Illuminate\Support\Facades\Log;

class ChatController extends Controller
{
    public function send(Request $request)
    {
        // --- NUEVO LOG AQUÃ ---
        Log::info('Entrada al ChatController::sendMessage.', ['request_all' => $request->all()]);

        $data = $request->validate([
            'message'    => 'required|string',
            'session_id' => 'nullable|string',
        ]);

        Log::info(__METHOD__.__LINE__.'Mensaje recibido del usuario.', ['session_id' => $data['session_id'], 'message_preview' => substr($data['session_id'], 0, 100)]);

        $response = OpenAIService::sendChatMessage(
            $data['message'],
            $data['session_id'] ?? null
        );
        
        return response()->json(['response' => $response]);
        
    }
}
